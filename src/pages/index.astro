<style>

	.glitch-filter {
		position: relative;

		&::before, &::after, & > picture::before {
				content: '';
				background: url('/images/gustavo-cordeiro-profile-picture.png');
				position:absolute;
				top:0px;
				left:0px;
				z-index: 2;
				width: 100%;
				height: 100%;
				transform: translate(0, 0);
				background-size: cover;
				mix-blend-mode: lighten;
				will-change: opacity;
				/* opacity: 0;
				transition: opacity .3s ease-in-out; */
		}

		&::after {
			/* filter: url('#effect-1'); */
			backdrop-filter: url('#effect-1');
			transform: translate(2%, 0);		
			animation: glitch-animation 3s ease-in-out infinite both;
			/* animation-play-state: paused; */
		}

		&::before {
			/* filter: url('#effect-2'); */
			backdrop-filter: url('#effect-2');
			transform: translate(0, -2%);
			animation: glitch-animation2 3s ease-in-out infinite both;
			/* animation-play-state: paused; */
		}

		& > picture::before {
			/* filter: url('#effect-3'); */
			backdrop-filter: url('#effect-3');
			transform: translate(0, 2%);
			animation: glitch-animation3 3s ease-in-out infinite both;
			/* animation-play-state: paused; */
		}

		&:hover {
			/* &::before, &::after, & > picture::before {
				opacity: 1;
			} */

