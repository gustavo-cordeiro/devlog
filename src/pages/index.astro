		/* text-shadow: -.03em -.03em 0 #C8AD49, -.03em -.03em 0 #E26D3C, .03em .03em 0 #5499D7; */
	}

	.glitch-cotainer {
		&:hover {
			& .text-shadow {
				/* animation: text-shadow-glitch 3s ease-in-out infinite forwards; */
				animation-play-state: running;
			}
			& .glitch-filter {
				&::after {
					/* animation: glitch-animation 3s ease-in-out infinite forwards; */
					animation-play-state: running;
				}

				&::before {
